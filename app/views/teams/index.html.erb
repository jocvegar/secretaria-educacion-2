<% provide :title, "Equipos" %>
<div class="container">
    <div id="teams">
        <div class="row">
            <div class="ol-12 col-md-9">
                <h1>Equipos</h1>
            </div>
            <div class="col-12 col-md-3 text-right">
                <div class="btn-group pull-right" role="group" aria-label="editar">
                    <%= link_to root_path, class: "btn btn-outline-secondary" do %>
                        <span><i class="fas fa-chevron-left"></i></span> Atr√°s
                    <% end %>
                    <%= link_to new_team_path, class: "btn btn-outline-success" do %>
                        <span><i class="fas fa-plus"></i></span> Nuevo
                    <% end %>
                    <%# end if current_user.manager? %>
                </div>
            </div>
        </div>
        <section class="py-5">
            <div class="fluid-container">
                <div class="row">
                    <% @teams.each do |team| %>
                        <div class="col-12 col-lg-4">
                            <div class="card mb-5 mb-lg-5">
                                <div class="card-header">
                                  <h5 class="text-muted text-uppercase text-center">
                                      <%= link_to team.name, team %>
                                  </h5>
                                </div>
                                <div class="card-body">
                                    <%# if team.users.present? %>
                                        <!-- <ul class="fa-ul">
                                            <%# team.users.each do |user| %>
                                                <li><span class="fa-li"><i class="fas fa-user"></i></span><%#= user.username %></li>
                                            <%# end %>
                                        </ul> -->
                                    <%# else %>
                                        <div class="col-md-12">
                                            <p class="text-center text-muted">
                                                No tiene usuarios
                                            </p>
                                        </div>
                                    <%# end %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </section>
    </div>
</div>
