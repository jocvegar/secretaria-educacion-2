<p>Sistema para control de procesos</p>

<i class="fab fa-500px"></i>

<div class="row">
  <div class="col-md-4 mb-4">
    <div class="callout callout-primary shadow h-85 py-3">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
              <%#= link_to "Procesos Activos", packages_path %>
            </div>
            <div class="h5 mb-0 font-weight-bold text-black-50"><%#= @packages.size %></div>
          </div>
          <div class="col-auto">
            <i class="fas fa-hashtag fa-2x text-muted"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="callout callout-warning shadow h-85 py-3">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
              <%#= link_to "Procesos Terminados", finished_packages_path %>
            </div>
            <div class="h5 mb-0 font-weight-bold text-black-50"><%#= @finished_packages.size %></div>
          </div>
          <div class="col-auto">
            <i class="fas fa-hashtag fa-2x text-muted"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="callout callout-success shadow h-85 py-3">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
              <%#= link_to "Usuarios", users_path %>
            </div>
            <div class="h5 mb-0 font-weight-bold text-black-50"><%#= @users.size %></div>
          </div>
          <div class="col-auto">
            <i class="fas fa-users fa-2x text-muted"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

