<div class="card">
    <div class="card-body">
        <h5 class="card-title">Editar Contacto</h5>
        <%= simple_form_for @user, url: user_path, method: :patch do |f| %>
            <%= f.error_notification %>
            <div class="row">
                <div class="col-12 col-sm-6">
                    <%= f.input :first_name, label: "Nombre" %>
                </div>
                <div class="col-12 col-sm-6">
                    <%= f.input :last_name, label: "Apellido" %>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-6">
                    <%= f.input :email, label: "Correo" %>
                </div>
                <div class="col-12 col-sm-6">
                    <%= f.input :phone_number, label: "TelÃ©fono" %>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-6">
                    <%= link_to "Cancelar", users_path, class: "btn btn-secondary btn-block" %>
                </div>
                <div class="col-6">
                    <%= f.button :submit, "Salvar", class: "btn-primary btn-block" %>
                </div>
            </div>
        <% end %>
    </div>
</div>

