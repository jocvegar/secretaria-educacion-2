<%= simple_form_for package do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="row">
        <div class="col-12 offset-sm-2 col-sm-8">
        <%= f.label "Título de Proceso" %>
        <%= f.input :title, label: false, placeholder: "Título" %>
        </div>
    </div>

    <div class="row">
        <div class="col-12 offset-sm-2 col-sm-8">
            <%= f.label "Fecha de Inicio" %> <br>
            <%= f.input :start_date, as: :string, label: false,
                input_html: { class: "flatpickr" } %>
        </div>
        <!--  <div class="col-12 col-sm-4">
            <%#= f.label "Fecha de Fin" %> <br>
            <%#= f.input :finish_date, as: :string, label: false,
                input_html: { class: "datepicker" }%>
        </div> -->
    </div>
    <hr>
    <% unless package.new_record? %>
        <div class="row">
            <div class="col-12 offset-sm-2 col-sm-8">
                <%#= f.label "Assignar a Equipos" %>
                <%#= f.association :teams, label: false, collection: Team.all.map { |team| [team.name, (team.id)] }, input_html: { class: 'add-chosen',
                    data: { placeholder: 'Seleccionar equipos'} } %>
            </div>
        </div>
        <div class="row">
            <div class="col-8 offset-2">
                <div class="row">
                    <div class="col-6 col-sm-4 pt-3" style="margin-top: -0.5rem;">
                        Desea publicar proceso?
                    </div>
                    <div class="col-6 col-sm-2 float-left">
                        <%= f.input :publish, label: false, input_html: { class: "toggle" } %>
                    </div>
                 </div>
            </div>
        </div>
        <br>
    <% end %>

    <div class="row">
        <div class="col-6 col-sm-4 offset-sm-2">
            <%= link_to back_link, class: "btn btn-secondary btn-block" do %>
                Regresar
                <% end %>
        </div>
        <div class="col-6 col-sm-4">
            <%= f.button :submit, "Salvar", class: "btn btn-primary btn-block" %>
        </div>
    </div>
<% end %>
